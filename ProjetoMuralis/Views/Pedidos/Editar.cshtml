
@model PedidosModel    

@{
    ViewData["Title"] = "Editar produto";
}

<div class="text-center">
    <h1 class="display-4">Editar produto</h1>
</div>

<form asp-controller="Pedidos" asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id_prod" />
    <div class="form-group">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome_prod" class="form-control" placeholder="Digite o nome do produto" />
        @Html.ValidationMessageFor(x=>x.Nome_prod)
    </div>
    <div class="form-group">
        <label for="nome" class="form-label">Descrição</label>
        <input type="text" asp-for="Descricao_prod" class="form-control" placeholder="Digite a descrição do produto" />
        @Html.ValidationMessageFor(x=>x.Descricao_prod)
    </div>
    <div class="form-group">
        <label for="nome" class="form-label">Marca</label>
        <input type="text" asp-for="Marca_prod" class="form-control" placeholder="Digite a marca do produto" />
        @Html.ValidationMessageFor(x=>x.Marca_prod)
    </div>

    <div class="form-group">
        <label for="nome" class="form-label">Valor da Unidade</label>
        <input type="text" asp-for="Valor_prod" class="form-control" placeholder="Digite o valor do produto" />
        @Html.ValidationMessageFor(x=>x.Valor_prod)
    </div>
    <div class="form-group">
        <label for="nome" class="form-label">Quantidade</label>
        <input type="text" asp-for="Quantidade_prod" class="form-control" placeholder="Digite a quantidade de produto" />
        @Html.ValidationMessageFor(x=>x.Quantidade_prod)
    </div>
    <br />
    <div class="d-grid gap-2">
        <button class=" btn btn-outline-success" type="submit">Editar</button>
        <a class="d-grid gap-2 btn btn-outline-dark" asp-action="Index" asp-controller="Pedidos" role="button">Voltar</a>
    </div>
        
</form>
