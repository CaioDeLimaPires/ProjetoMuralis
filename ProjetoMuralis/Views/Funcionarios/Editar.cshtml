@using ProjetoMuralis.Enumerador
@model FuncionariosModel    

@{
    ViewData["Title"] = "Editar funcionario";
}

<div class="text-center">
    <h1 class="display-4">Editar Funcionario</h1>
</div>

<form asp-controller="Funcionarios" asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id_func" />
    <div class="form-group">
        <label for="nome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome_func"class="form-control"placeholder="Digite o nome do funcionario"/>
        @Html.ValidationMessageFor(x=>x.Nome_func)
    </div>
    <div class="form-group">
        <label for="nome" class="form-label">E-mail</label>
        <input type="text" asp-for="Email_func" class="form-control" placeholder="Digite o e-mail do funcionario" />
        @Html.ValidationMessageFor(x=>x.Email_func)
    </div>
    <div class="form-group">
        <label for="nome" class="form-label">Login</label>
        <input type="text" asp-for="Login_fuc" class="form-control" placeholder="Digite o nome do funcionario" />
        @Html.ValidationMessageFor(x=>x.Login_fuc)
    </div>
    <div class="form-group">
        <label for="nome" class="form-label">Perfil</label>
        
        <select asp-for="Perfil_func"class="form-control">
            <option value="">Selecione</option>
            <option value="@PerfilEnum.Admin">Adiministrador</option>
            <option value="@PerfilEnum.Func">Funcionario</option>           
        </select>
        @Html.ValidationMessageFor(x=>x.Perfil_func)
    </div>
    <br />
    <div class="d-grid gap-2">
        <button class=" btn btn-outline-success" type="submit">Editar</button>
        <a class=" btn btn-outline-dark" asp-action="Index" asp-controller="Funcionarios" role="button">Voltar</a>
    </div>
        
</form>
